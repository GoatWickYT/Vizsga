{
    "compilerOptions": {
        "module": "Nodenext",
        "moduleResolution": "Nodenext",
        "target": "ES2020",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
